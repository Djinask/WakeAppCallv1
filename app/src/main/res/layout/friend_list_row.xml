<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="horizontal"
    android:focusable="false">

    <com.example.wakeappcallv1.app.Classes.RoundedImageView
        android:layout_width="@dimen/rowHeight"
        android:layout_height="@dimen/rowHeight"
        android:scaleType="fitXY"
        android:src="@drawable/icona_del_utente"
        android:focusable="false"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/rowHeight"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/friendTextView"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/rowHeight"
        android:layout_weight="2"
        android:paddingStart="20dip"
        android:gravity="center_vertical"
        android:text="Friend name"
        android:textSize="20dip"
        android:textColor="@android:color/background_light"
        android:focusable="false"/>

    <ImageButton
        android:id="@+id/deleteFriendButton"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/rowHeight"
        android:scaleType="center"
        android:layout_weight="8"
        android:focusable="false"
        android:background="@android:color/background_dark"
        android:src="@android:drawable/ic_menu_delete"/>

    </LinearLayout>

</LinearLayout>